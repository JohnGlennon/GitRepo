    <script type="text/javascript">
        $("#btnDeelplatform").click(function () {
        $.get('@Url.Action("MaakDeelplatform", "SuperAdmin")', {}, function (resultaat) {
            $("#divResultaat").html(resultaat);
        });
        });
    </script>

    <script type="text/javascript">
        $("#btnAdmins").click(function () {
        $.get('@Url.Action("LaadGebruikers", "SuperAdmin")', {}, function (resultaat) {
            $("#divResultaat").html(resultaat);
