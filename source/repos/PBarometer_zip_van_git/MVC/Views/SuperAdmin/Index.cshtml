    <script type="text/javascript">
        $("#btnDeelplatformen").click(function () {
        $.get('@Url.Action("DeelplatformOverzicht", "SuperAdmin")', {}, function (resultaat) {
            $("#divResultaat").html(resultaat);
        });
        });
    </script>




