@model IEnumerable<MVC.Models.SuperAdmin.DeelplatformOverzichtViewModel>
<h4>Deelplatformen</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            @Ajax.ActionLink("Pas Aan", "EditDeelplatform", "SuperAdmin", new { id = item.Id }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "divResultaat" }) |
            @Html.ActionLink("Verwijder", "VerwijderDeelplatform", "SuperAdmin", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
